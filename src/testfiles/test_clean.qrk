// Hello World
println 'Hello, Quark!'

// Arithmetic
x = 10 + 5 * 2
println x

// For loop
for i in range 5:
    println i

// Conditional
if x > 15:
    println 'x is big'
else:
    println 'x is small'

// Function with pipe
fn double n ->
    n * 2

println 'Double of 5:'
5 | double | println

// Factorial
fn fact n ->
    when n:
        0 or 1 -> 1
        _ -> n * fact (n - 1)

println 'Factorial of 10:'
fact 10 | println
