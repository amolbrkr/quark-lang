// test_dict.qrk - Dict creation, access, assignment

// Dict creation with identifier keys
info = dict { name: 'Alex', age: 30, active: true }

// Dot access (key lookup)
println(info.name)
println(info.age)
println(info.active)

// Len
println(len(info))

// Dot assignment
info.name = 'James'
println(info.name)

// Add new key via dot assignment
info.city = 'NYC'
println(info.city)

// Empty dict
empty = dict {}
println(len(empty))

// Mixed value types
data = dict { x: 1, y: 2.5, label: 'point' }
println(data.x)
println(data.y)
println(data.label)

// Dict in function
fn get_name(d) -> d.name
println(get_name(info))

// Dict truthiness
if info:
    println('has entries')
if !empty:
    println('empty dict is falsy')
